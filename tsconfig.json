{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",             /* Allow 'import x from y' when a module doesn't have a default export. */
    "esModuleInterop": true,                        /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist"
  },
  "files": [
    "lib/middleware.ts" // 对ts目录下的index.ts文件进行编译
  ]
}